.container
    = form_with(model: article, local: true) do |f|
        .field
            .field-label
                = f.label :title, 'タイトル', class:"form-label"
            .field-field
                = f.text_field :title, class:"form-field"
        .field
            .field-label
                = f.label :content, '内容', class:"form-label"
            .field-field
                = f.text_area :content, class:"form-field form-area"
        .field
            .field-label
                = f.label :tag, 'タグ', class:"form-label"
            .field-field
                = f.text_field :tag ,class: "form-field"
        .field
            .field-label
                = f.label :status, '状態', class:"form-label"
            .field-field
                = f.select :status, Article.statuses.map { |k, v| [ I18n.t("enum.statuses.#{k}"), k ] }, {}, { class: "form-field" }
        
        .actions
            = f.submit "記事を登録する", class: "btn btn-primary btn-submit"